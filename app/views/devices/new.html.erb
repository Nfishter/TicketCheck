<h1>Fill out the form to add a new device</h1>
<%= form_for @device do |f| %>
  <p>
    <%= f.label :make %><br>
    <%= f.text_area :Make %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_area :Model %>
  </p>

  <p>
    <%= f.label :type %><br>
    <%= f.text_area :Type %>
  </p>

  <p>
    <%= f.label :Asset_Tag %><br>
    <%= f.text_area :Asset_Tag %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>